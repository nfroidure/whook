{
  "name": "@whook/whook",
  "version": "3.1.3",
  "description": "Build strong and efficient REST web services.",
  "metapak": {
    "configs": [
      "main",
      "readme",
      "eslint",
      "babel",
      "jest",
      "jsarch",
      "jsdocs"
    ],
    "data": {
      "childPackage": true,
      "testsFiles": "'src/**/*.test.js'",
      "files": "'src/**/*.js'",
      "ignore": [
        "dist"
      ],
      "bundleFiles": [
        "dist/**/*.js"
      ]
    }
  },
  "main": "dist/index.js",
  "scripts": {
    "architecture": "jsarch 'src/**/*.js' > ARCHITECTURE.md && git add ARCHITECTURE.md",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "cli": "env NODE_ENV=${NODE_ENV:-cli}",
    "compile": "babel src --out-dir=dist",
    "cover": "npm run jest -- --coverage",
    "cz": "env NODE_ENV=${NODE_ENV:-cli} git cz",
    "doc": "echo \"# API\" > API.md; jsdoc2md 'src/**/*.js' >> API.md && git add API.md",
    "jest": "NODE_ENV=test jest",
    "lint": "eslint 'src/**/*.js'",
    "metapak": "metapak",
    "precz": "npm t && npm run lint && npm run metapak -- -s",
    "prettier": "prettier --write 'src/**/*.js'",
    "preversion": "npm t && npm run lint && npm run compile && npm run metapak -- -s",
    "start": "node bin/server.js",
    "test": "npm run jest"
  },
  "keywords": [
    "REST",
    "HTTP",
    "server",
    "web",
    "services"
  ],
  "author": {
    "name": "Nicolas Froidure",
    "email": "nicolas.froidure@insertafter.com",
    "url": "http://insertafter.com/en/index.html"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nfroidure/whook.git"
  },
  "bugs": {
    "url": "https://github.com/nfroidure/whook/issues"
  },
  "homepage": "https://github.com/nfroidure/whook",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.1",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-knifecycle": "^1.0.3",
    "caporal": "^0.10.0",
    "eslint": "^5.13.0",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "^24.0.0",
    "jsarch": "^2.0.1",
    "jsdoc-to-markdown": "^4.0.1",
    "metapak": "^3.1.5",
    "metapak-nfroidure": "9.6.0",
    "prettier": "^1.16.3"
  },
  "dependencies": {
    "common-services": "^5.0.3",
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "internal-ip": "^3.0.1",
    "knifecycle": "^5.2.0",
    "pkg-dir": "^3.0.0",
    "portfinder": "^1.0.20",
    "@whook/http-transaction": "^3.1.3",
    "@whook/http-server": "^3.1.3",
    "@whook/http-router": "^3.1.3"
  },
  "contributors": [],
  "engines": {
    "node": ">=8.12.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "8.12.0"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      "babel-plugin-knifecycle"
    ]
  },
  "jest": {
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "roots": [
      "<rootDir>/src"
    ]
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "modules": true
    },
    "env": {
      "es6": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "semi": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "files": [
    "dist/**/*.js",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ]
}
